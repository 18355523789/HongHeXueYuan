<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.linter.learning.course.dao.NoticeDao">

    <resultMap id="BaseResultMap" type="cn.linter.learning.course.entity.Notice">
        <id column="id" property="id"/>
        <result column="title" property="title"/>
        <result column="summary" property="summary"/>
        <result column="content" property="content"/>
        <result column="type" property="type"/>
        <result column="enabled" property="enabled"/>
        <result column="view_count" property="viewCount"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="creator" property="creator"/>
        <result column="updater" property="updater"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, title, summary, content, type, enabled, view_count, create_time, update_time, creator, updater
    </sql>

    <select id="queryById" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM notice
        WHERE id = #{id}
    </select>

    <select id="list" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM notice
        <where>
            <if test="enabled != null">
                AND enabled = #{enabled}
            </if>
        </where>
        <choose>
            <when test="orderBy == 'popularity'">
                ORDER BY view_count DESC, create_time DESC
            </when>
            <when test="orderBy == 'create_time'">
                ORDER BY create_time DESC
            </when>
            <otherwise>
                ORDER BY create_time DESC
            </otherwise>
        </choose>
    </select>

    <insert id="create" parameterType="cn.linter.learning.course.entity.Notice" useGeneratedKeys="true" keyProperty="notice.id">
        INSERT INTO notice (title, summary, content, type, enabled, view_count, create_time, update_time, creator, updater)
        VALUES (#{notice.title}, #{notice.summary}, #{notice.content}, #{notice.type}, #{notice.enabled}, #{notice.viewCount}, #{notice.createTime}, #{notice.updateTime}, #{notice.creator}, #{notice.updater})
    </insert>

    <update id="update" parameterType="cn.linter.learning.course.entity.Notice">
        UPDATE notice
        <set>
            <if test="notice.title != null">
                title = #{notice.title},
            </if>
            <if test="notice.summary != null">
                summary = #{notice.summary},
            </if>
            <if test="notice.content != null">
                content = #{notice.content},
            </if>
            <if test="notice.type != null">
                type = #{notice.type},
            </if>
            <if test="notice.enabled != null">
                enabled = #{notice.enabled},
            </if>
            <if test="notice.updateTime != null">
                update_time = #{notice.updateTime},
            </if>
            <if test="notice.updater != null">
                updater = #{notice.updater},
            </if>
        </set>
        WHERE id = #{notice.id}
    </update>

    <delete id="delete">
        DELETE FROM notice WHERE id = #{id}
    </delete>

    <update id="incrementViewCount">
        UPDATE notice SET view_count = view_count + 1 WHERE id = #{id}
    </update>

</mapper>
