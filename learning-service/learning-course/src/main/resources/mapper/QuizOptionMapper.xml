<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.linter.learning.course.dao.QuizOptionDao">

    <resultMap type="cn.linter.learning.course.entity.QuizOption" id="QuizOptionMap">
        <result property="id" column="id"/>
        <result property="questionId" column="question_id"/>
        <result property="optionText" column="option_text"/>
        <result property="optionKey" column="option_key"/>
        <result property="isCorrect" column="is_correct"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <!--通过ID查询单个选项-->
    <select id="selectById" resultMap="QuizOptionMap">
        select id, question_id, option_text, option_key, is_correct, create_time, update_time
        from quiz_option
        where id = #{id}
    </select>

    <!--通过题目ID查询所有选项-->
    <select id="listByQuestionId" resultMap="QuizOptionMap">
        select id, question_id, option_text, option_key, is_correct, create_time, update_time
        from quiz_option
        where question_id = #{questionId}
        order by option_key
    </select>

    <!--插入单个选项-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into quiz_option(question_id, option_text, option_key, is_correct, create_time, update_time)
        values (#{questionId}, #{optionText}, #{optionKey}, #{isCorrect}, #{createTime}, #{updateTime})
    </insert>

    <!--更新选项-->
    <update id="update">
        update quiz_option
        set
        <if test="questionId != null">
            question_id = #{questionId},
        </if>
        <if test="optionText != null and optionText != ''">
            option_text = #{optionText},
        </if>
        <if test="optionKey != null and optionKey != ''">
            option_key = #{optionKey},
        </if>
        <if test="isCorrect != null">
            is_correct = #{isCorrect},
        </if>
        update_time = #{updateTime}
        where id = #{id}
    </update>

    <!--删除选项-->
    <delete id="delete">
        delete
        from quiz_option
        where id = #{id}
    </delete>

    <!--通过题目ID删除所有选项-->
    <delete id="deleteByQuestionId">
        delete
        from quiz_option
        where question_id = #{questionId}
    </delete>

</mapper>
